<!-- views/cart.handlebars -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Carrito</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Carrito</h1>
    {{#if cart.products}}
        {{#each cart.products}}
            <div>
                <h3>{{this.product.title}}</h3>
                <p>Precio: ${{this.product.price}}</p>
                <p>Cantidad: {{this.quantity}}</p>
            </div>
        {{/each}}
    {{else}}
        <p>El carrito está vacío</p>
    {{/if}}
    <a href="/products">Volver</a>
</body>
</html>